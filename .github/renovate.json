{
    
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": ["config:recommended"],
    "platform": "github",
    "assignees": ["acbgbca"],
    "prHourlyLimit": 1,
    "prConcurrentLimit": 3,
    "ignoreTests": false,
    "stabilityDays": 3,
    "packageRules": [
        {
            "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
            "automerge": true
        },
        {
            "matchDepTypes": ["devDependencies"],
            "automerge": true
        }
    ],
    "platformAutomerge": false
}